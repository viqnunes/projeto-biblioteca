@model Usuario
@{
    ViewData["Title"] = "Edição de Usuários";
}

<h1 class="row justify-content-md-center">Edição de Usuários</h1>
<div class="row justify-content-md-center">
    <form asp-action="Edicao" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" value="@Model.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" value="@Model.Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" value="@Model.Senha" class="form-control" />
            </div>
        </fieldset>

        <input type="submit" value="Atualizar" class="btn btn-primary" />
    </form>
</div>